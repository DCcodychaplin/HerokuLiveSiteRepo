<h1><%= title %></h1>
<div id="messageArea" class="alert alert-danger"></div>

<div class="row justify-content-lg-center g-3">
  <form class="col-lg-6 col-md-10 col-sm-10" method="POST">
    <a href="/add" id="addButton" class="btn btn-primary mb-3"><i class="fas fa-plus-circle"></i> Add Contact</a>
    
    <div class="input-group mb-3">
      <span class="input-group-text">Full Name</span>
      <input id="fullName" name="fullName" type="text" class="form-control"
        value="<%= contact.FullName %>"
        aria-label="Full Name" aria-describedby="Full Name Input" required>
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text">Contact number</span>
      <input id="contactNumber" name="contactNumber" type="tel" class="form-control"
      value="<%= contact.ContactNumber %>"
        aria-label="Contact number" aria-describedby="Contact number Input" required>
    </div>
    
    <div class="input-group mb-3">
      <span class="input-group-text">Email Address</span>
      <input id="emailAddress" name="emailAddress" type="email" class="form-control"
      value="<%= contact.EmailAddress %>"
        aria-label="Email Address" aria-describedby="Email Address Input" required>
    </div>

    <% if (title == "Edit Contact") { %>
    <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
    <a id="deleteButton" class="btn btn-danger delete" href="/delete/<%= contact._id %>"><i class="fas fa-trash-alt fa-sm"></i> Delete</a>
    <% } else { %>
      <button id="addButton" type="submit" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
    <% } %>
    <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
  </form>

</div>